[core]
  editor = vim 
  pager = 'less'

[user]
  email = valdeir.naval@gmail.com
  name = Valdeir S.

[alias]
  ls = log --graph --pretty=format:'%Cred%h%Creset: %s %C(yellow)%d%Creset - %C(cyan)By %cn <%ce>%Creset %Cgreen(%cr)%Creset'
  lg = log --graph --color=always --pretty=format:'%C(yellow)commit %H%Creset%C(auto)%d%Creset%nAuthor: %cn <%ce>%nDate:   %cd %C(12)(%cr)%Creset%n%n    %s%n%n%w(121,4,4)%b%+N'
  log = log --graph
  ci = commit -s
  ca  = commit -as
  caa  = !git add -A && git commit
  ds = diff --patch-with-stat
  cii = commit -p
  go = "!f() { git switch \"$1\"; }; f"
  aliases = config --get-regexp alias
  contributors = shortlog --summary --numbered --email
  whoami = "!n() { echo \"$(git config user.name) <$(git config user.email)>\"; }; n"
  fc = "!s() { git log --color=aways --oneline -S$1; }; s"
  fm = "!s() { git lg --grep=$1; }; s"
  v5 = !git config user.name 'Valdeir S.' && git config user.email "valdeir@v5market.com"
  fm = "!f() { git ls --grep=$1; } f;"
  master = switch master
  main = switch main
  zip = "!a() { git archive --format zip -o $(basename $(pwd))__$(date +%F__%H_%M_%S).zip -9 ${1:-HEAD}; }; a"
  web = instaweb -d python
  ui = gui
  branches = branch --all --format='%(color:red)%(objectname:short=9)%(color:reset) %(color:cyan)%(align:40)By %(committername) %(committeremail)%(end)%(color:reset) %(color:green)%(align:12)%(committerdate:relative)%(end)%(color:reset) %(if)%(HEAD)%(then)%(color:blue bold italic)%(else)%(end)%(refname:lstrip=2)%(color:reset)' --sort=-committerdate
  prev = switch -
  
[init]
  defaultBranch = main
